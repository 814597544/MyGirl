<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

<View
    android:id="@+id/logain_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/login_bg"
    />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/title_return"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="left|center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dip" >

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                />


        </LinearLayout>

        <ImageView
            android:layout_width="85.0dip"
            android:layout_height="85.0dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15.0dip"
            android:layout_marginTop="35.0dip"
           />

        <TextView
            android:id="@+id/tv_login_msg"
            android:layout_width="fill_parent"
            android:layout_height="35.0dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10.0dip"
            android:layout_marginLeft="5.0dip"
            android:gravity="center"
            android:textColor="#ffe54558"
            android:textSize="14.0dip"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48.0dip"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/login_grey_selector"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/edit_login_name"
                style="@style/common_edittext"
                android:layout_marginRight="15dp"
                android:drawableLeft="@drawable/login_edittext_man_icon"
                android:imeOptions="normal|actionUnspecified"
                android:textColor="#ffffffff"
                android:textColorHint="#ffffffff" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="48.0dip"
            android:layout_marginTop="10.0dip"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/login_grey_selector"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/edit_login_pw"
                style="@style/common_edittext"
                android:layout_marginRight="15dp"
                android:drawableLeft="@drawable/login_edittext_psw_icon"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:maxLength="16"
                android:textColor="#ffffffff"
                android:textColorHint="#ffffffff" />


        </RelativeLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="20.0dip"
            android:layout_marginTop="20.0dip"
            android:gravity="center"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                >

                <Button
                    android:id="@+id/bt_login"
                    android:layout_width="199dp"
                    android:layout_height="48.0dip"
                    android:layout_gravity="center"
                    android:text="登录"
                    android:textColor="@drawable/click_change_color"
                    android:background="@drawable/settext_bag"
                    android:textSize="16.0dip" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                >

            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="28.0dip"
            android:layout_marginRight="28.0dip"
            android:layout_marginTop="16.0dip"
            android:gravity="center_vertical"
            android:background="@color/transparent">
            <LinearLayout
                android:id="@+id/rpsd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/rpsd_false"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/res_select1"/>
                <ImageView
                    android:id="@+id/rpsd_true"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/res_select"
                    android:visibility="gone"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="记住密码"
                    android:textSize="16sp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5dp"
                    android:textColor="#14BABA"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记密码？"
                android:textColor="#14BABA"
                android:visibility="gone"
                android:textSize="16sp"
                android:layout_alignParentRight="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                />
        </RelativeLayout>




    </LinearLayout>



</RelativeLayout>